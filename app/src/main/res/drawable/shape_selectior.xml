<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/colorPurple"/>

            <corners
                android:radius="15dp"/>

            <stroke
                android:color="#FFF"
                android:width="2dp"/>

            <padding
                android:right="2dp"
                android:top="2dp"
                android:left="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorPink"/>

            <corners
                android:radius="15dp"/>

            <stroke
                android:color="#FFF"
                android:width="2dp"/>

            <padding
                android:right="2dp"
                android:top="2dp"
                android:left="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
</selector>